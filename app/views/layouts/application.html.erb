<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'application', 'http://fonts.googleapis.com/css?family=Open+Sans' %>
  <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="page-container">

    <!-- top navbar -->
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="offcanvas" data-target=".sidebar-nav">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to 'QA Blog', root_path, {:class=> 'navbar-brand'} %>
        </div>
        <% if user_signed_in? %>
        <div class="pull-right navbar-brand"><small>Hello, <%= current_user.email %> </small></div>
        <% end %>
      </div>
    </div>

    <div class="container">
      <div class="row row-offcanvas row-offcanvas-left">

        <!-- sidebar -->
        <div class="col-xs-6 col-sm-2 sidebar-offcanvas" id="sidebar" role="navigation">
          <ul class="nav">
            <li class="active"><span class="fa fa-home"></span><%= link_to "Home", root_path %> </li>
            <% if user_signed_in? %>
            <li><span class="fa fa-pencil"></span><%= link_to "New Post", new_post_path %></li>
            <% end %>

            <% if user_signed_in? %>
            <li>
              <i class="fa fa-times"></i><%= link_to('Logout', destroy_user_session_path, :method => :delete, data: {confirm: 'Are you sure you want to logout?'}) %>
            </li>
            <% else %>
            <li>
              <i class="fa fa-key"></i><%= link_to('Login', new_user_session_path)  %>
            </li>
            <% end %>

            <li><span class="fa fa-user"></span><%= link_to "About", about_path %> </li>
          </ul>
        </div>

        <!-- main area -->
        <div class="col-xs-12 col-sm-10">
          <%= yield %>
                </div><!-- /.col-xs-12 main -->
              </div><!--/.row-->
            </div><!--/.container-->
          </div><!--/.page-container-->

</body>
</html>
