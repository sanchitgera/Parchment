<div class="row">
  <div class="col-xs-12">
  <div class="comment">
    <p class="comment-name"> <strong> <i class="fa fa-user"></i> <%= comment.name %> </strong> </p>
    <p class="comment-time"> <i class="fa fa-clock-o"></i>  <%= time_ago_in_words(comment.created_at) %> Ago</p>
    <p class="comment-body"> <%= comment.body %> </p>
    <% if user_signed_in %>
    <p>
      <%= link_to 'Delete Comment', [comment.post, comment], method: :delete, data: {confirm: 'Are you sure?'} %>
    </p>
    <% end %> 
  </div>
  </div>
</div>
