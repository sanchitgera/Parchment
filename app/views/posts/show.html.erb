<h1 class="title">
  <%= @post.title %>
</h1>

<p class="date">
  Submitted <%= time_ago_in_words(@post.created_at) %> Ago
</p>

<p class="edit">
  <%= link_to 'Edit Post', edit_post_path(@post) %>
  <%= link_to 'Delete Post', post_path(@post), method: :delete, data: {confirm: 'Are you Sure'}  %>
</p>

<p class="body">
  <%= @post.body %>
</p>
