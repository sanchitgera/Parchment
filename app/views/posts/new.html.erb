<h2>New Post </h2>
<hr />

<%= bootstrap_form_for :post, url: posts_path do |f| %>
<p>
  <%= f.text_field :title, placeholder: "Post Title" %>
</p>

<p>
  <%= f.text_area :body, placeholder: "Enter the blog post...", :rows => 10 %>
</p>

<p>
  <%= f.submit :class=> 'btn btn-success' %>
</p>
<% end %>
